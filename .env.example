# ======================
# SERVER CONFIGURATION
# ======================
PORT=5000
NODE_ENV=production

# ======================
# DATABASE
# ======================
# MongoDB Atlas Connection (FREE TIER)
# Format: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/cybersuite?retryWrites=true&w=majority

# ======================
# FRONTEND URL
# ======================
# For Vercel deployment, update this after deploying frontend
FRONTEND_URL=https://cyber-suite-o4te449af-harshitas-projects-504f51a0.vercel.app

# ======================
# JWT CONFIGURATION
# ======================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-generate-a-random-one
JWT_EXPIRE=7d

# ======================
# EMAIL CONFIGURATION
# ======================
# Use Gmail or other SMTP service (Gmail free tier)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=CyberSuite <noreply@cybersuite.com>

# ======================
# ML SERVICE
# ======================
# Railway will provide this URL after deploying ML service
ML_SERVICE_URL=http://localhost:5001

# ======================
# FILE ENCRYPTION
# ======================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
